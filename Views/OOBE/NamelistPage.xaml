<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ARCV4.Views.OOBE"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="ARCV4.Views.OOBE.NamelistPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NamelistPage">

    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" 
        Value="{DynamicResource TextFillColorPrimaryBrush}" />
            </Style>
        </Grid.Resources>
        <ui:TextBlock x:Name="tb01" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="最后一步" VerticalAlignment="Top" Height="44" Width="243" FontWeight="Bold" FontSize="36"/>
        <ui:TextBlock x:Name="tb02" HorizontalAlignment="Left" Height="25" Margin="10,59,0,0" TextWrapping="Wrap" Text="添加您的第一份名单即可完成设置！" VerticalAlignment="Top" Width="621" FontSize="16"/>
        <ui:Button x:Name="Finally" Content="完成设置" Height="48" Margin="632,392,0,0" VerticalAlignment="Top" Width="163" IsEnabled="False" Click="Finally_Click"/>
        <Button Content="从旧版导入" Height="42" Margin="136,398,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click_1"/>
        <Button Content="新建名单" Height="42" Margin="266,398,0,0" VerticalAlignment="Top" Width="124" Click="Button_Click"/>
        <RichTextBox IsReadOnly="True" x:Name="Rich123" HorizontalAlignment="Left" Height="303" Margin="10,84,0,0" VerticalAlignment="Top" Width="785" >
            <FlowDocument LineHeight="1">
                <Paragraph>
                    <Run x:Name="NameEditor" FontFamily="Microsoft YaHei UI" Text="请先从下方选择创建方式"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <CheckBox x:Name="PasswordBox" Content="创建更改名单密码" Height="37" Margin="392,403,0,0" VerticalAlignment="Top" Width="168"/>
        <ui:Button Content="导入已有名单" Height="42" Margin="10,398,0,0" VerticalAlignment="Top" Width="122" Click="Button_Click_2"/>



    </Grid>
</Page>
