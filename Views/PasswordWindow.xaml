<ui:FluentWindow x:Class="ARCV4.Views.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARCV4.Views"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 ResizeMode="NoResize"
                 WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
                 ExtendsContentIntoTitleBar="True" 
        Title="PasswordWindow" Height="250" Width="500" Loaded="FluentWindow_Loaded" MinWidth="500" MinHeight="250" MaxWidth="500" MaxHeight="250">
    <Grid>
        <ui:TitleBar Title="请输入密码" CanMaximize="False" ShowClose="False" ShowMaximize="False" ShowMinimize="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon x:Name="RootIcon" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <ui:PasswordBox x:Name="RootPassWordBox" Height="56" TextWrapping="Wrap" Text="" Margin="21,0,21,0"/>
        <ui:TextBlock x:Name="RootTextBox" HorizontalAlignment="Center" Margin="0,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="458" FontSize="16" Text="请输入密码："/>
        <ui:Button Content="确定" Margin="320,190,0,0" VerticalAlignment="Top" Height="39" Width="159" Click="Button_Click"/>

    </Grid>
</ui:FluentWindow>
