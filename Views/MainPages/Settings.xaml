<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ARCV4.Views.MainPages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="ARCV4.Views.MainPages.Settings"
      mc:Ignorable="d"
      Title="Settings" Width="780" Height="652" Loaded="Page_Loaded">

    <ui:DynamicScrollViewer  Width="780" VerticalScrollBarVisibility="Visible">
        <Grid>
            <Grid.Resources>
                <Style TargetType="ui:TextBlock">
                    <Setter Property="Foreground" 
                    Value="{DynamicResource TextFillColorPrimaryBrush}" />
                </Style>
            </Grid.Resources>
            <ui:TextBlock HorizontalAlignment="Left" Height="45" Margin="10,10,0,0" TextWrapping="Wrap" Text="设置" VerticalAlignment="Top" Width="172" FontSize="36" FontWeight="Bold"/>
            <ui:TextBlock HorizontalAlignment="Left" Height="25" Margin="10,82,0,0" TextWrapping="Wrap" Text="自动点名，立即点名，批量点名所使用的点名名单(Json 格式)：" VerticalAlignment="Top" Width="780" FontSize="18"/>
            <ui:TextBlock HorizontalAlignment="Left" Height="26" Margin="10,423,0,0" TextWrapping="Wrap" Text="主题设置：                       " VerticalAlignment="Top" Width="780" FontSize="18" FontWeight="Bold"/>
            <RadioButton x:Name="DarkModeButton" Content="深色模式" Margin="10,449,0,0" Width="780" VerticalAlignment="Top" Checked="DarkModeButton_Checked"/>
            <RadioButton x:Name="LightModeButton" Content="浅色模式" Margin="10,481,0,0" Width="780" VerticalAlignment="Top" Checked="LightModeButton_Checked"/>
            <RadioButton x:Name="FollowSystemButton" Content="跟随系统" Margin="10,513,0,0" VerticalAlignment="Top" Width="780" Checked="FollowSystemButton_Checked"/>
            <Button Content="新建名单" Height="43" Margin="10,155,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click"/>
            <ui:TextBlock HorizontalAlignment="Center" Height="26" Margin="0,56,0,0" TextWrapping="Wrap" Text="点名设置：                       " VerticalAlignment="Top" Width="760" FontSize="18" FontWeight="Bold"/>
            <ui:TextBlock HorizontalAlignment="Left" Height="25" Margin="10,206,0,0" TextWrapping="Wrap" Text="自动点名显示每个人名之间的间隔（ms）：" VerticalAlignment="Top" Width="780" FontSize="18"/>
            <ui:NumberBox InputMethod.IsInputMethodEnabled="False" x:Name="AutoDianmingIntervalTickBox" HorizontalAlignment="Left" Height="36" Margin="10,231,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="197" PreviewTextInput="AutoDianmingIntervalTickBox_PreviewTextInput_1" ValueChanged="AutoDianmingIntervalTickBox_TextChanged" PreviewKeyDown="AutoDianmingIntervalTickBox_PreviewKeyDown"/>
            <ui:TextBlock HorizontalAlignment="Left" Height="26" Margin="10,276,0,0" TextWrapping="Wrap" Text="每次批量点名的个数（建议不要设置太多，以免占用内存造成卡顿）：" VerticalAlignment="Top" Width="780" FontSize="18"/>
            <ui:NumberBox InputMethod.IsInputMethodEnabled="False" x:Name="ListDianmingNumbers" HorizontalAlignment="Left" Height="36" Margin="10,302,0,0" TextWrapping="Wrap" Text="1" Width="197" VerticalAlignment="Top" PreviewTextInput="ListDianmingNumbers_PreviewTextInput_1" ValueChanged="ListDianmingNumbers_TextChanged" PreviewKeyDown="ListDianmingNumbers_PreviewKeyDown"/>
            <ui:TextBlock HorizontalAlignment="Left" Height="26" Margin="10,551,0,0" TextWrapping="Wrap" Text="杂项设置：                       " VerticalAlignment="Top" Width="780" FontSize="18" FontWeight="Bold"/>
            <ui:ToggleSwitch x:Name="StartUpCheckUpdate" Content="启动时检测更新" Margin="0,582,0,0" VerticalAlignment="Top" Width="760" HorizontalAlignment="Center" Click="StartUpCheckUpdate_Click"/>
            <ui:DropDownButton x:Name="ChooseNamelistButton" Content="名单选择……" Height="43" Margin="10,107,0,0" VerticalAlignment="Top" Width="593" FontSize="12">
                <ui:DropDownButton.Flyout>
                    <ContextMenu x:Name="NameListMenu">

                    </ContextMenu>
                </ui:DropDownButton.Flyout>
            </ui:DropDownButton>
            <Button x:Name="EditNamelist" Content="编辑当前选中名单" Height="43" Margin="149,155,0,0" VerticalAlignment="Top" Width="157" Click="EditNamelist_Click"/>
            <ui:TextBlock HorizontalAlignment="Left" Height="26" Margin="10,343,0,0" TextWrapping="Wrap" Text="点名杂项设置……" VerticalAlignment="Top" Width="780" FontSize="18"/>
            <ui:Button x:Name="DianMingFont" Content="编辑点名字体" Height="44" Margin="10,369,0,0" VerticalAlignment="Top" Width="146" Click="DianMingFont_Click"/>
            <ui:Button x:Name="DianMingFontColor" Content="编辑字体颜色" Height="44" Margin="161,369,0,0" VerticalAlignment="Top" Width="146" Click="DianMingFontColor_Click"/>
            <ui:Button x:Name="DianmingMusic" Content="编辑点名音乐" Height="44" Margin="312,369,0,0" VerticalAlignment="Top" Width="146" Click="DianmingMusic_Click"/>
            <ui:Button Content="配置项恢复默认值（非必要请勿使用）" Height="35" Margin="14,607,0,0" VerticalAlignment="Top" Width="274" Foreground="#FFC50000" Click="Button_Click_1"/>
        </Grid>
    </ui:DynamicScrollViewer>
</Page>
