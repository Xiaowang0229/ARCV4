<ui:FluentWindow x:Class="ARCV4.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ARCV4.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="MainWindow" Height="500" Width="800" ExtendsContentIntoTitleBar="True" MinWidth="800" MinHeight="500" MaxWidth="800" MaxHeight="500">
    <Grid>
        <ui:TitleBar  Width="800" Height="45" Title="自动点名器 Indev 4.0.0.0">
            <ui:TitleBar.Icon>
                <ui:ImageIcon x:Name="RootIcon"/>
            </ui:TitleBar.Icon>
        </ui:TitleBar>
        <ui:NavigationView x:Name="RootNavi" HorizontalAlignment="Center" Height="440" Margin="0,45,0,0" VerticalAlignment="Top" Width="800" OpenPaneLength="200" IsBackButtonVisible="Collapsed">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="手动点名">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Home24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="立即点名">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Timer24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="批量点名">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="List24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="设置">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="关于">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Info24"/>
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
